{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["ES2022"],
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  